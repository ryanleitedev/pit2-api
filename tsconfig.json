{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@api/*": ["./api/*"]
    },
    "esModuleInterop": true,
    "outDir": "build",
    "removeComments": true,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./api/typescript"
    ]
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": [
    "./api/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
}